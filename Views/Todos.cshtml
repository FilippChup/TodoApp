@model List<TodoItemDTO>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="wrapper">
    <header>Todo App</header>
    <div class="inputField">
        <input type="text" id="taskInput" placeholder="Enter your new Todo" />
        <button id="addButton" class="btn-primary">Add</button>
    </div>
    <table class="todoTable">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Priority</th>
            <th>IsComplete</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody id="todoTable">
        @* Можно сразу отрендерить существующие задачи из модели *@
        @foreach (var todo in Model)
        {
            <tr data-id="@todo.Id" class="task-row">
                <td>@todo.Id</td>
                <td>@todo.Name</td>
                <td>@todo.Priority</td>
                <td class="status-cell" style="cursor:pointer">
                    @(todo.IsComplete ? "✅" : "❌")
                </td>
                <td>
                    <button class="delete-task">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <footer>
        <span>You have <span class="pendingTasks">0</span> pending tasks</span>
        <button id="clearAllButton">Clear All</button>
    </footer>
</div>
<script src="~/js/script.js"></script>
</body>
</html>